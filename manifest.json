{
    "manifest_version": 3,
    "name": "Automation Testing Prototype",
    "description": "Prototype for Archer automation testing platform",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": "archer_logo.png",
        "default_title": "Click to start recording"
    }
  }


