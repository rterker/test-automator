{
    "manifest_version": 3,
    "name": "Automation Testing Prototype",
    "description": "Prototype for Archer automation testing platform",
    "version": "1.0",
    "permissions": [
        "tabs",
        "storage",
        "debugger"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-script.js"]
        }
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": "logo.png",
        "default_title": "Click to activate extension",
        "default_popup": "popup.html"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; style-src 'self'; img-src 'self'; font-src 'self'; object-src 'none';"
    }
  }


